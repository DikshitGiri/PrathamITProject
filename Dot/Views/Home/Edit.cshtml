<form method="POST" asp-controller="Home"  asp-action="Update" >
    <div class="form-group">

        <input hidden type="text" value="@Model.Id" class="form-control" name="Id">
        
    </div>
    <div class="form-group">
        <label>Booked</label>
        <input type="text" value="@Model.Booked" class="form-control" name="Booked"  >
    </div>
    <div class="form-group">
        <label >Category</label>
        <input type="Text" value="@Model.Category" class="form-control" name="Category">
    </div>
    <div class="form-group">
        <label >Passanger_name</label>
        <input type="Text" value="@Model.PassangerName" class="form-control" name="PassangerName">
    </div>
    <div class="form-group">
        <label>Route</label>
        <input type="text" value="@Model.Route" class="form-control" name="Route">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
